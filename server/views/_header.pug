header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All tours
    .header__logo
        img(src="/img/logo-white.png" alt="Natours logo")

    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(id='logoutbtn') Log out
            a.nav__el(href="#")
                if user.photo
                    img.nav__user-img(src=`img/users/${user.photo}` alt="User photo")
                else
                    img.nav__user-img(src='img/users/user-2.jpg' alt="User photo")
                span=user.name

        else
            button.nav__el(id='login-button') Log in
            button.nav__el.nav__el--cta(id='signup-button') Sign up